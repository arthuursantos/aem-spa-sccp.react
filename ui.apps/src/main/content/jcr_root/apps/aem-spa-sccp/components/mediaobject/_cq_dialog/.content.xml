<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Mídia"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
                <tabs jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/tabs"
                      maximized="{Boolean}true">
                    <items jcr:primaryType="nt:unstructured">
                        <properties
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Propriedades"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                            <items jcr:primaryType="nt:unstructured">
                                <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <title
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Título"
                                                        fieldDescription="Título do componente. Obrigatório."
                                                        emptyText="Insira um título."
                                                        name="./title"
                                                        required="{Boolean}true"/>
                                                <subtitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Trecho em destaque logo após o título. Opcional."
                                                        emptyText="Insira um subtítulo."
                                                        fieldLabel="Subtítulo"
                                                        name="./subtitle"/>
                                                <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        fieldDescription="Descrição abaixo do título/subtítulo. Obrigatório."
                                                        emptyText="Insira uma descrição."
                                                        fieldLabel="Descrição"
                                                        name="./description"/>
                                            </items>
                                        </column>
                                    </items>
                                </columns>
                            </items>
                        </properties>
                        <imagem jcr:primaryType="nt:unstructured"
                                jcr:title="Imagem"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}true">
                            <items jcr:primaryType="nt:unstructured">
                                <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <image
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                        allowUpload="{Boolean}false"
                                                        autoStart="{Boolean}false"
                                                        class="cq-droptarget"
                                                        fieldLabel="Imagem"
                                                        fieldDescription="Imagem do componente. Obrigatório."
                                                        fileNameParameter="./fileName"
                                                        fileReferenceParameter="./imageReference"
                                                        mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                        multiple="{Boolean}false"
                                                        name="./image"

                                                        title="Imagem"
                                                        uploadUrl="${suffix.path}"
                                                        useHTML5="{Boolean}true"
                                                        required="{Boolean}true"/>
                                                <list
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        class="cq-dialog-dropdown-showhide"
                                                        cq-dialog-dropdown-showhide-target=".carousel-options-showhide-target"
                                                        fieldLabel="Alinhamento da imagem"
                                                        name="./imageAlignment">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <left
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Alinhado à esquerda"
                                                                value="flex-md-row-reverse"/>
                                                        <right
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Alinhado à direita"
                                                                value=""/>
                                                    </items>
                                                </list>
                                            </items>
                                        </column>
                                    </items>
                                </columns>
                            </items>
                        </imagem>
                    </items>
                </tabs>
        </items>
    </content>
</jcr:root>